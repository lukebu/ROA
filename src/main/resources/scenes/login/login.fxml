<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.lukebu.workmt.login.LoginController" >

    <top>
        <GridPane alignment="CENTER" gridLinesVisible="false" >
            <VBox alignment="TOP_CENTER">
                <Label textFill="darkblue" text="Witaj w Manager Zadań">
                    <font>
                        <Font name="Arial bold" size="20"/>
                    </font>
                </Label>
                <Label textFill="darkblue" text="aby móc korzystać prosimy się zautoryzować">
                    <font>
                        <Font name="Arial bold" size="20"/>
                    </font>
                </Label>
                    <padding>
                        <Insets top="50" bottom="30"/>
                    </padding>
            </VBox>
        </GridPane>
    </top>

    <center>
        <GridPane alignment="TOP_CENTER" gridLinesVisible="false" vgap="10" hgap="10">
            <Label fx:id="loginLabel" text="Login: " GridPane.rowIndex="1" GridPane.columnIndex="0" >
                <font>
                    <Font name="Arial bold" size="14"/>
                </font>
            </Label>
            <TextField fx:id="loginTextField" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Login"/>
            <Label fx:id="passwordLabel" text="Hasło: " GridPane.rowIndex="2" GridPane.columnIndex="0">
                <font>
                    <Font name="Arial bold" size="14"/>
                </font>
            </Label>
            <PasswordField fx:id="passwordPF" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="Hasło"/>
            <Label textFill="crimson" fx:id="errorMsgLabel" GridPane.rowIndex="3" GridPane.columnIndex="0">
                <font>
                    <Font name="Arial bold" size="14"/>
                </font>
            </Label>
            <Button text="Zaloguj" fx:id="logInButton" GridPane.rowIndex="3" GridPane.columnIndex="1"
                    GridPane.columnSpan="1" GridPane.halignment="RIGHT" onAction="#handleSubmitButtonAction" >
                <font>
                    <Font name="Arial bold" size="14"/>
                </font>
            </Button>
        </GridPane>
    </center>
    <bottom>
        <VBox alignment="BOTTOM_CENTER">
        <Label textFill="darkblue" text="© 2019 Open Games Group" >
            <font>
                <Font name="Arial bold" size="9"/>
            </font>
        </Label>
        <Label textFill="darkblue" text="All copyrights and trademarks are the property of their respective owners." >
            <font>
                <Font name="Arial bold" size="9"/>
            </font>
        </Label>
        </VBox>
    </bottom>
</BorderPane>
